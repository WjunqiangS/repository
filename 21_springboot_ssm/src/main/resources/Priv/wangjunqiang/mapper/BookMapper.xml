<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Priv.wangjunqiang.dao.BookDao">
    <select id="findById" resultType="Book">
        select * from tbl_book where id = #{id}
    </select>

    <select id="findAll" resultType="Book">
        select * from tbl_book
    </select>

    <insert id="insert">
        insert into tbl_book(id, type, name, description)
        values (null, #{type}, #{name}, #{description})
    </insert>

    <update id="update">
        update tbl_book set type = #{type}, name = #{name}, description = #{description}
        where id = #{id}
    </update>

    <delete id="delete">
        delete from tbl_book where id = #{id}
    </delete>

</mapper>